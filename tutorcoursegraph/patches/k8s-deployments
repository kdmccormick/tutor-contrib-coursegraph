---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: coursegraph
  labels:
    app.kubernetes.io/name: coursegraph
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: coursegraph
  template:
    metadata:
      labels:
        app.kubernetes.io/name: coursegraph
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: coursegraph
          image: {{ COURSEGRAPH_NEO4J_IMAGE }}
          ports:
            - containerPort: {{ COURSEGRAPH_NEO4J_HTTP_PORT }}
            - containerPort: {{ COURSEGRAPH_NEO4J_BOLT_PORT }}
              value: course_discovery.settings.tutor.production
          securityContext:
            allowPrivilegeEscalation: false
